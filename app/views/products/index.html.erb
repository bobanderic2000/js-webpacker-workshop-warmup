<h1>Products</h1>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Money</th>
      <th>Currency</th>
      <th>Tags</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.money %></td>
        <td><%= product.currency %></td>
        <td><%= display_tag_list(product.tags) %></td>
        <td><%= product.start_at %></td>
        <td><%= product.end_at %></td>
        <td class="text-secondary"><%= link_to 'Show', product, class: "text-secondary"  %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="text-secondary"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

